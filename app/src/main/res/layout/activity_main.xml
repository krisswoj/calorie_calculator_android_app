<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#232323"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:contentDescription="TODO"
        app:srcCompat="@mipmap/logo_transparent" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/amiko_bold"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="@string/enter_amount_of_calories"
        android:textColor="@android:color/white"
        app:layout_column="0"
        app:layout_row="2" />

    <EditText
        android:id="@+id/calories_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/amiko_bold"
        android:gravity="center_horizontal"
        android:hint="@string/sample_amount_calries_answer"
        android:inputType="number"
        android:paddingTop="1dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_column="0"
        app:layout_row="3" />

    <TextView
        android:id="@+id/kind_of_diet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/amiko_bold"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="@string/special_diet_version"
        android:textColor="@android:color/white"
        app:layout_column="0"
        app:layout_row="4" />


    <RadioGroup
        android:id="@+id/radioKindOfMeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_column="0"
        app:layout_row="11">


        <RadioButton
            android:id="@+id/radioNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:fontFamily="@font/amiko_bold"
            android:text="normal"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/radioVegetarian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:fontFamily="@font/amiko_bold"
            android:text="vegetarian"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/radioVegan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:fontFamily="@font/amiko_bold"
            android:text="vegan"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/radioPaleo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@android:color/white"
            android:fontFamily="@font/amiko_bold"
            android:text="paleo"
            android:textColor="@android:color/white" />

    </RadioGroup>

    <TextView
        android:id="@+id/without"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/amiko_bold"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="List of excluded ingredients"
        android:textColor="@android:color/white"
        app:layout_column="0"
        app:layout_row="12" />

    <EditText
        android:id="@+id/without_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:fontFamily="@font/amiko_bold"
        android:gravity="center_horizontal"
        android:hint="Example: shellfish, olives"
        android:inputType="text"
        android:paddingTop="1dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_column="0"
        app:layout_row="13" />


    <Button
        android:id="@+id/btnDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get recipes"
        app:layout_column="0"
        app:layout_row="16" />

</android.support.v7.widget.GridLayout>